{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | {{ serie.name }}
{% endblock %}

{% block body %}
    <h1>{{ serie.name }}</h1>
    <section>
        <article class="serie-details">
            <div>
                <img src="{{ asset('img/posters/series/' ~ serie.poster) }}" alt="{{ serie.name }}">
            </div>
            <div >
                <div>{{ serie.name }}</div>
                <div>{{ serie.genres }}</div>
                <div>Users rating : {{ serie.vote }}</div>
                <div>Serie status : {{ serie.status }}</div>
                <div>Aired from {{ serie.firstAirDate | date("Y-m-d")}} to {{ serie.lastAirDate | date("Y-m-d") }}</div>
                <div>{{ serie.overview | nl2br }}</div>
            </div>
        </article>
    </section>
{% endblock %}

{% block extraStyle %}
    <style>
        body {
            background-image: linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0)), url("{{ asset('img/backdrops/' ~ serie.backdrop) }}");
        }
    </style>
{% endblock %}
